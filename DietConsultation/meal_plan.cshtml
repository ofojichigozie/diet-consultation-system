<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!--<meta http-equiv="refresh" content="15; /home.cshtml">-->
        <meta name="description" content="">
        <meta name="author" content="">
        <title>Diet Consultation - Meal Plan</title>
        <!-- Bootstrap core CSS -->
        <link href="/Shared/css/bootstrap.css" rel="stylesheet">
        <link href="/Shared/css/style.css" rel="stylesheet">
        <script src="/Shared/js/respond.js"></script>
        <script src="/Shared/js/webSpeech.js"></script>
    </head>
    <body style="background-color: #FBE1DF">
        <!--Navigation Section-->
        <nav class="navbar navbar-inverse" style="margin-bottom: 0px;">
          <div class="container">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
            </div>
            <div id="navbar" class="collapse navbar-collapse navbar-right">
              <ul class="nav navbar-nav">
                <li class=""><a href="home"> Home</a></li>
                <li class=""><a href="#"> Enquire</a></li>
                <li class=""><a href="bmi"> BMI</a></li>
                <li class=""><a href="meal_plan"> Weekly Meal Plan</a></li>
              </ul>
            </div><!--/.nav-collapse -->
          </div>
        </nav>

        <!--Render the Slider-->
        @RenderPage("Shared/slider.cshtml");
        <div class="container">
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    <div class="panel panel-default">
                      <div class="panel-heading text-center">
                        <h3 class="panel-title">Weekly Meal Plan</h3>
                      </div>
                      <div class="panel-body">
                        <div class="text-center">
                            <table class="table table-striped table-bordered" style="font-weight: bold;">
                                <thead style="font-weight: bold;">
                                    <td></td>
                                    <td style="background-color: #729659; color: #FFF;">BREAKFAST</td>
                                    <td style="background-color: #729659; color: #FFF;">LUNCH</td>
                                    <td style="background-color: #729659; color: #FFF;">DINNER</td>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td style="font-weight: bold; background-color: #ef6d6d; color: #FFF;">SUNDAY</td>
                                        <td>@(Functions.GetBreakFast())</td>
                                        <td>@(Functions.GetLunch())</td>
                                        <td>@(Functions.GetDinner())</td>
                                    </tr>
                                    <tr>
                                        <td style="font-weight: bold; background-color: #ef6d6d; color: #FFF;">MONDAY</td>
                                        <td>@(Functions.GetBreakFast())</td>
                                        <td>@(Functions.GetLunch())</td>
                                        <td>@(Functions.GetDinner())</td>
                                    </tr>
                                    <tr>
                                        <td style="font-weight: bold; background-color: #ef6d6d; color: #FFF;">TUESDAY</td>
                                        <td>@(Functions.GetBreakFast())</td>
                                        <td>@(Functions.GetLunch())</td>
                                        <td>@(Functions.GetDinner())</td>
                                    </tr>
                                    <tr>
                                        <td style="font-weight: bold; background-color: #ef6d6d; color: #FFF;">WEDNESDAY</td>
                                        <td>@(Functions.GetBreakFast())</td>
                                        <td>@(Functions.GetLunch())</td>
                                        <td>@(Functions.GetDinner())</td>
                                    </tr>
                                    <tr>
                                        <td style="font-weight: bold; background-color: #ef6d6d; color: #FFF;">THURSDAY</td>
                                        <td>@(Functions.GetBreakFast())</td>
                                        <td>@(Functions.GetLunch())</td>
                                        <td>@(Functions.GetDinner())</td>
                                    </tr>
                                    <tr>
                                        <td style="font-weight: bold; background-color: #ef6d6d; color: #FFF;">FRIDAY</td>
                                        <td>@(Functions.GetBreakFast())</td>
                                        <td>@(Functions.GetLunch())</td>
                                        <td>@(Functions.GetDinner())</td>
                                    </tr>
                                    <tr>
                                        <td style="font-weight: bold; background-color: #ef6d6d; color: #FFF;">SATURDAY</td>
                                        <td>@(Functions.GetBreakFast())</td>
                                        <td>@(Functions.GetLunch())</td>
                                        <td>@(Functions.GetDinner())</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                      </div>
                    </div>
                </div><!-- End of col-md-6 -->
                <div class="col-md-1"></div>
            </div>
        </div>

        <script type="text/javascript">
            //speak("Please, provide all the information. It is required by the diet consultant to make recommendations for your nutritional needs");
        </script>

        <!-- javascript -->
        <script src="/Shared/js/jquery-1.11.3.min.js"></script>
        <script src="/Shared/js/bootstrap.min.js"></script>
        <script src="/Shared/js/jquery.backstretch.min.js"></script>
        <script src="/Shared/js/scripts.js"></script>
    </body>
</html>
